<div class="w-1/3 mx-auto">
  <div class="bg-white shadow-md rounded my-6">
    <div class="bg-blue-500 text-center"> 
      <h1 class="text-white content-center"><%= action %> Projeto</h1>
    </div> 
    
    <div class="m-5">
      <%= form_for(project, html: { class: 'mx-auto w-full max-w-lg' }) do |form|%>
        <div class="flex flex-wrap -mx-3 mb-6">
          <div class="w-full px-3">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-password">
              Titulo
            </label>
            <%= form.text_field(:title, class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500') %>
          </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-6">
          <div class="w-full px-3">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-password">
              Descri√ßao
            </label>
            <%= form.text_field(:description, class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500') %>
          </div>
        </div>
        <div class="md:flex items-center content-center">
          <div class="md:w-1/3"></div>
          <div class="md:w-1/3 mb-3">
            <%= link_to projects_path do %>
              <button class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded">
                Voltar
              </button>
            <% end %>
          </div>
          <div class="md:w-1/3 mb-3 mr-20">
            <%= submit_tag("#{action}", class: 'shadow bg-blue-500 hover:bg-blue-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded') %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
